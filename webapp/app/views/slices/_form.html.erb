<% form_for(@slice) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :startlat %> [deg]<br />
    <%= f.text_field :startlat %>
  </p>
  <p>
    <%= f.label :startlon %> [deg]<br />
    <%= f.text_field :startlon %>
  </p>
  <p>
    End Lat [deg]<br />
    <%= f.text_field :lat %>
  </p>
  <p>
    End Lon [deg]<br />
    <%= f.text_field :lon %>
  </p>
  <p>
    <%= f.label :avgvel %> [m/s]<br />
    <%= f.text_field :avgvel %>
  </p>
  <p>
    <%= f.label :headingdeg %> [deg], optional<br />
    <%= f.text_field :headingdeg %>
  </p>
  <p>
    <%= f.label :dist %> [m], optional<br />
    <%= f.text_field :dist %>
  </p>
  <p>
    <%= f.label :duration %> [s], optional<br />
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :startaccuracy %> [m], optional<br />
    <%= f.text_field :startaccuracy %>
  </p>
  <p>
    <%= f.label :endaccuracy %> [m], optional<br />
    <%= f.text_field :endaccuracy %>
  </p>
  <p>
    <%= f.label :instanceid %>, optional<br />
    <%= f.text_field :instanceid %>
  </p>
  <p>
    <%= f.label :categoryid %>, optional<br />
    <%= f.text_field :categoryid %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
